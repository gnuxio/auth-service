# Server Configuration
PORT=8080
APP_ENV=local

# AWS Configuration
AWS_REGION=us-east-1
COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
COGNITO_CLIENT_ID=your-client-id-here
COGNITO_CLIENT_SECRET=your-client-secret-here

# Cookie Configuration
# Leave COOKIE_DOMAIN empty for localhost, set to .yourdomain.com for production
COOKIE_DOMAIN=
# Set to true in production to only send cookies over HTTPS
COOKIE_SECURE=false
# Your frontend URL for CORS configuration
FRONTEND_URL=http://localhost:3000
